    <li><%= link_to "Quarter 2", :controller => params[:controller], :category => params[:category], :timeframe => "q2" %></li>
    <li><%= link_to "Quarter 3", :controller => params[:controller], :category => params[:category], :timeframe => "q3" %></li>
    <li><%= link_to "Quarter 4", :controller => params[:controller], :category => params[:category], :timeframe => "q4" %></li>
    <li><%= link_to "Season", :controller => params[:controller], :category => params[:category], :timeframe => "season" %></li>
    <li><%= link_to "Summer", :controller => params[:controller], :category => params[:category], :timeframe => "summer" %></li>
  </ul>
</div>
