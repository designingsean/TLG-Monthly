<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div id="monthly"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div id="total"></div>
    </div>
    <div class="col-sm-6">
      <div id="average"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12"></div>
  </div>
</div>
<script>
$(function () {
  $('#monthly').highcharts({
    chart: {
      type: 'column'
    },
    title: {
      text: 'Monthly Net Income'
    },
    xAxis: {
      categories: [
        <% @revenues.select(:month).distinct.each do |revenue| %>
          '<%= Date::MONTHNAMES[revenue.month] %>',
        <% end %>
      ]
    },
    yAxis: {
      title: {
        text: 'Net Income'
      },
      labels: {
        formatter: function() {
          return this.value;
        }
      }
    },
    tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>{point.y:.1f}</b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
    series: [
      <% @years.each do |year| %>
        {
          name: <%= year.year %>,
          data: [
            <% @revenues.year(year.year).each_with_index do |revenue, i| %>
              <%= revenue.total-@expenses[i].total %>,
            <% end %>
          ]
      },
      <% end %>
    ]
  });
  $('#total').highcharts({
    chart: {
      type: 'column'
    },
    title: {
      text: 'Annual Net Income'
    },
    xAxis: {
      categories: [
        'Annual'
      ]
    },
    yAxis: {
      title: {
        text: 'Net Income'
      },
      labels: {
        formatter: function() {
          return this.value;
        }
      }
    },
    tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>{point.y:.1f}</b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
    series: [
      <% @years.each do |year| %>
        {
          name: <%= year.year %>,
          data: [
            <%= @revenues.year(year.year).sum(:total)-@expenses.year(year.year).sum(:total) %>
          ]
      },
      <% end %>
    ]
  });
  $('#average').highcharts({
    chart: {
      type: 'column'
    },
    title: {
      text: 'Average Annual Net Income'
    },
    xAxis: {
      categories: [
        'Annual'
      ]
    },
    yAxis: {
      title: {
        text: 'Average Net Income'
      },
      labels: {
        formatter: function() {
          return this.value;
        }
      }
    },
    tooltip: {
                headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
                pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                    '<td style="padding:0"><b>{point.y:.1f}</b></td></tr>',
                footerFormat: '</table>',
                shared: true,
                useHTML: true
            },
    series: [
      <% @years.each do |year| %>
        {
          name: <%= year.year %>,
          data: [
            <%= @revenues.year(year.year).average(:total)-@expenses.year(year.year).average(:total) %>
          ]
      },
      <% end %>
    ]
  });
});
</script>